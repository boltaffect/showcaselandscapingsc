extends ../../mixins/_layout

include ../../mixins/mixins

mixin image_list()
  - var img_list = ['1', '2', '3', '4', '5', '7', '8', '9', '10', '6']

  for item in img_list

    - var img_url = 'img/' + item + '.jpg'
    - var thumb_img_url = 'img/thumb/' + item + '.jpg'

    a(href=img_url, data-lightbox="roadtrip", style='margin-right:5px;margin-bottom:5px;').thumb_image
      img(src=thumb_img_url, style="max-width:100%")

